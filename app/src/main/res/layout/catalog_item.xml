<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="210dp"
        >

        <TextView
            android:id="@+id/background_box"
            android:layout_width="364dp"
            android:layout_height="190dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="45dp"
            android:background="#c0c0c0"></TextView>

        <TextView
            android:id="@+id/pros_box"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="45dp"
            android:text="placeholder"
            android:textColor="#111"></TextView>

        <TextView
            android:id="@+id/negs_box"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="45dp"
            android:text="placeholder"
            android:textColor="#111"></TextView>

        <TextView
            android:id="@+id/workout_title_box"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="45dp"
            android:text="placeholder"
            android:textAllCaps="true"
            android:textColor="#111"
            android:textSize="16dp"></TextView>


        <ImageView
            android:id="@+id/pro_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="45dp"
            android:src="@drawable/plussign" />

        <ImageView
            android:id="@+id/con_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="95dp"
            android:layout_marginBottom="45dp"
            android:src="@drawable/minussign"></ImageView>


        <TextView
            android:id="@+id/workout_info_box"
            android:layout_width="355dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="150dp"
            android:layout_marginBottom="45dp"
            android:text="placeholder"
            android:textColor="#111"></TextView>

        <ImageButton
            android:layout_width="130dp"
            android:layout_height="115dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="45dp" />


    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>

